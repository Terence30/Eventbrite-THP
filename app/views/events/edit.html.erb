   <input class="col-md-6 form-control" type="datetime-local" name="start_date" value="<%=@event.start_date%>" placeholder="Selectionner une date et l'heure de depart de votre event"/>
   <br> </br>
   <input class="col-md-6 form-control" type="number" step= 5 name="duration" value="<%=@event.duration%>"placeholder="Selectionner la durée en minutes de votre event "/>
   <br> </br>
   <input class="col-md-6 form-control" type="text" name="description" value="<%=@event.description%>" placeholder="Entrer la description de votre event"/>
   <br> </br>
   <input class="col-md-6 form-control" type="number" name="price" min="1" max="1000" value="<%=@event.price%>" placeholder="Entrer le prix de votre event"/>
   <br> </br>   
   <input class="col-md-6 form-control" type="text" name="location" value="<%=@event.location%>" placeholder="Entrer le lieu de votre event"/>
   <br> </br>


      <br> </br>
      <input class="btn btn-primary" type="submit" value="Mettre a jour l'event" />
    <% end %>

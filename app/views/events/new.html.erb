   <br> </br>
   <input class="col-md-6 form-control" type="number" step= 5 name="duration" placeholder="Selectionner la durée en minutes de votre event "/>
   <br> </br>
   <input class="col-md-6 form-control" type="text" name="description" placeholder="Entrer la description de votre event"/>
   <br> </br>
   <input class="col-md-6 form-control" type="number" name="price" min="1" max="1000" placeholder="Entrer le prix de votre event"/>
   <br> </br>   
   <input class="col-md-6 form-control" type="text" name="location" placeholder="Entrer le lieu de votre event"/>
   <br> </br>


      <br> </br>
      <input class="btn btn-primary" type="submit" value="Créer l'evenement" />
      <br>
      <br>
    <% end %>

    </center>
  </body>
</html>
  


